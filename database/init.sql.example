-- Пример файла инициализации базы данных
-- Этот файл будет заменен реальным дампом вашей локальной БД

-- Создание базы данных (если не существует)
-- CREATE DATABASE antrakt;

-- Пример создания пользователя (если нужно)
-- CREATE USER antrakt_user WITH PASSWORD 'your_password';
-- GRANT ALL PRIVILEGES ON DATABASE antrakt TO antrakt_user;

-- Базовые настройки
SET statement_timeout = 0;
SET lock_timeout = 0;
SET idle_in_transaction_session_timeout = 0;
SET client_encoding = 'UTF8';
SET standard_conforming_strings = on;
SET check_function_bodies = false;
SET xmloption = content;
SET client_min_messages = warning;
SET row_security = off;

-- Здесь будут таблицы и данные из вашего дампа
-- Для создания реального дампа используйте:
-- Windows: create_database_dump.bat
-- Linux/macOS: ./database/create_dump.sh